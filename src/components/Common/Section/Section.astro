---
interface Props {
  id: string
}
const { id } = Astro.props

import { t, setDefaultNamespace } from 'i18next'

setDefaultNamespace(id)
---

<section id={id}>
  <h2>{t('title')}</h2>
  {t('description') != 'description' && <p>{t('description')}</p>}
  <slot />
</section>

<style>
  section {
    min-height: 100vh;
    padding-block-start: 4rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  h2 {
    font-size: 2.5rem;
    font-weight: 800;
  }
</style>
