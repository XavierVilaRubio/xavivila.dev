---
import { localizePath } from 'astro-i18next'
import i18next from 'i18next'
import Icon from 'astro-icon'

import { t, setDefaultNamespace } from 'i18next'

setDefaultNamespace('common')
---

<script is:inline>
  const intersectionObserver = new IntersectionObserver(
    (entries) => {
      entries.forEach(({ target, isIntersecting }) => {
        const navLink = document.querySelector(
          `a[href='/#${target.id}'], a[href='/es/#${target.id}']`
        )
        navLink?.classList.toggle('active', isIntersecting)
      })
    },
    {
      threshold: 0.5,
    }
  )
  document.addEventListener('DOMContentLoaded', () => {
    const sections = document.querySelectorAll('section')
    sections.forEach((section) => {
      intersectionObserver.observe(section)
    })

    document
      .getElementById('menu-button')
      .addEventListener('click', function () {
        document.getElementById('nav-links').classList.toggle('show')
      })
  })
</script>

<header>
  {}
  <div class="wrapper">
    <div class="logo-and-menu">
      <a href={localizePath('/#').slice(0, -1)}>
        <img class="logo" src="/XV.svg" alt="Xavi Vila logo" />
      </a>
      <button class="menu-button" id="menu-button" aria-label="Menu">
        <Icon class="menu-icon" name="eva:menu-outline" />
      </button>
    </div>
    <nav class="nav-links" id="nav-links">
      <ul class="links-list">
        {
          ['work', 'about_me', 'contact'].map((key) => (
            <li class="links-list-item">
              <a href={localizePath(`/#${key}`).slice(0, -1)}>
                {t(`navbar.${key}`)}
              </a>
            </li>
          ))
        }
      </ul>
      <div class="language-and-social-lists">
        <ul class="language-list">
          <li>
            <a
              href="/"
              hreflang="en"
              class={`language-link ${
                i18next.resolvedLanguage === 'en' ? 'active' : ''
              }`}>EN</a
            >
          </li>
          <li><p>|</p></li>
          <li>
            <a
              href="/es"
              hreflang="es"
              class={`language-link ${
                i18next.resolvedLanguage === 'es' ? 'active' : ''
              }`}>ES</a
            >
          </li>
        </ul>
        <ul class="social-list">
          <li>
            <a
              href="https://github.com/XavierVilaRubio"
              target="_blank"
              aria-label="Go to Xavier's GitHub page"
            >
              <Icon class="icon" name="eva:github-outline" />
            </a>
          </li>
          <li>
            <a
              href="https://linkedin.com/in/XavierVilaRubio"
              target="_blank"
              aria-label="Go to Xavier's LinkedIn page"
            >
              <Icon class="icon" name="eva:linkedin-outline" />
            </a>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</header>

<style>
  header {
    position: fixed;
    position: sticky;
    top: 0;
    width: 100%;
    backdrop-filter: blur(10px);
    background: #fff;
    background: linear-gradient(
      180deg,
      var(--color-background) 0%,
      rgba(var(--color-background-rgb) 0.5) 50%,
      rgba(255, 255, 255, 0) 100%
    );

    z-index: 1;
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    padding-inline: 1rem;
  }

  .logo-and-menu {
    display: flex;
    justify-content: space-between;
    padding-block: 1rem;
  }

  .logo,
  .menu-icon {
    height: 24px;
  }

  li,
  a {
    display: flex;
  }

  .nav-links {
    max-height: 0;
    overflow: hidden;
    transition: all 0.3s;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    font-weight: 700;
  }

  .links-list,
  .language-and-social-lists {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .language-and-social-lists {
    gap: 1rem;
  }

  ul {
    display: flex;
  }

  .language-list {
    gap: 0.25rem;
  }

  .nav-links.show {
    padding-block: 1rem;
    max-height: 350px;
  }

  button,
  .language-link {
    display: flex;
    border: none;
    background: none;
    padding: 0;
  }

  .icon {
    width: 20px;
    height: 20px;
  }
  .active,
  .links-list-item:hover > a,
  .icon:hover {
    color: var(--color-accent);
    transition: color 0.3s ease;
  }

  .social-list li,
  .social-list li > a,
  .language-list li {
    height: fit-content;
  }

  .language-and-social-lists .social-list {
    gap: 0.75rem;
  }

  .language-list {
    line-height: 0.875rem;
    font-size: 0.875rem;
  }

  .language-list p {
    font-size: 0.85em;
  }

  @media (min-width: 768px) {
    .wrapper {
      padding-inline: 2rem;
    }

    .wrapper,
    .links-list,
    .language-and-social-lists {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }

    .links-list {
      gap: 4rem;
    }

    .language-and-social-lists {
      gap: 2rem;
    }

    .links-list {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
    }

    .menu-button {
      display: none;
    }

    .nav-links {
      display: contents;
    }

    .icon {
      width: 1.15rem;
      height: 1.15rem;
    }
  }
</style>
