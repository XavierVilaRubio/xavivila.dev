---
import Icon from 'astro-icon'
import { t } from 'i18next'

interface Props {
  github_link: string
  site_link: string
}
const { github_link, site_link, target = '_blank' } = Astro.props
---

<div class="project-links">
  <a
    href={github_link}
    class="btn"
    target={target}
    aria-label={t('projects:source_code')}
  >
    <Icon name="eva:github-outline" class="btn__icon" />
    {t('projects:source_code')}
  </a>
  <a
    href={site_link}
    class="btn"
    target={target}
    aria-label={t('projects:live_site')}
  >
    <Icon name="eva:globe-outline" class="btn__icon" />
    {t('projects:live_site')}
  </a>
</div>

<style>
  .project-links {
    display: flex;
    gap: 2rem;
    margin-block: -1rem 1.5rem;
  }

  .btn {
    min-width: 64px;
    padding-block: 0.5rem;
    border-radius: 0.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    width: fit-content;
    font-weight: 700;
    transition: all 0.2s ease-in-out;
    gap: 0.5rem;

    &:hover {
      color: var(--color-gray);
    }
  }

  .btn__icon {
    height: 1.25rem;
  }
</style>
