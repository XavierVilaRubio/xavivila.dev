---
interface Props {
  id: string
}
const { id } = Astro.props

import { t, setDefaultNamespace } from 'i18next'

setDefaultNamespace(id)
const descriptionTextAlign =
  t('description') != 'description' ? 'start' : 'center'
---

<section class="section" id={id}>
  <h2 class="section__title">{t('title')}</h2>
  {
    t('description') != 'description' && (
      <p class="section__description">{t('description')}</p>
    )
  }
  <div class="section__content">
    <slot />
  </div>
</section>

<style is:global define:vars={{ descriptionTextAlign }}>
  .section {
    min-height: 30vh;
    width: min(85%, 75rem);
    margin-inline: auto;
    padding-block: 8rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h2.section__title {
    font-size: 2.5rem;
    font-weight: 900;
  }

  h3 {
    font-size: 2rem;
    font-weight: 700;
  }

  .section__description {
    margin-block-start: 1.5rem;
    text-align: center;
  }

  .section__content {
    margin-block-start: 3rem;
    width: 100%;
    text-align: var(--descriptionTextAlign);
  }

  .section__content > a:not(.btn) {
    text-decoration: underline;
  }

  @media (min-width: 760px) {
    .section__description {
      margin-block-start: 1.5rem;
      white-space: pre-wrap;
    }
  }
</style>
