---
interface Props {
  id: string
}
const { id = true } = Astro.props

import { t, setDefaultNamespace } from 'i18next'

setDefaultNamespace(id)
---

<section class="section" id={id}>
  <h2 class="section__title">{t('title')}</h2>
  <div class="section__content">
    <slot />
  </div>
</section>

<style is:global>
  @custom-media --md-screen (min-width: 768px);

  .section {
    --section-spacing: 4rem;
    min-height: 30vh;
    width: min(85%, 75rem);
    margin-inline: auto;
    padding-block: var(--section-spacing);
    display: flex;
    flex-direction: column;
    align-items: center;

    @media (--md-screen) {
      --section-spacing: 8rem;
    }
  }

  h2.section__title {
    font-size: 2.5rem;
    font-weight: 900;
  }

  h3 {
    font-size: 1.75rem;
    font-weight: 700;

    @media (--md-screen) {
      font-size: 2rem;
    }
  }

  .section__content {
    margin-block-start: 3rem;
    width: 100%;
  }

  .section__content > a:not(.btn) {
    text-decoration: underline;
  }
</style>
