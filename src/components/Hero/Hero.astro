---
import LinkButton from '../Common/LinkButton/LinkButton.astro'
import { Trans } from 'astro-i18next/components'
import { t, setDefaultNamespace } from 'i18next'

setDefaultNamespace('hero')
---

<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.addEventListener('mousemove', (e) => {
      const mouseX = e.clientX
      const mouseY = e.clientY
      const width = e.view?.innerWidth
      const height = e.view?.innerHeight

      const dot = document.getElementById('dot')
      if (dot && height && width) {
        dot.style.top = `${height - mouseY}px`
        dot.style.left = `${width - mouseX}px`
      }
    })
  })
</script>

<section>
  <img src="/xavi_compressed.webp" alt="" />
  <div class="text">
    <h1>
      <Trans i18nKey="headline">
        Hi, I'm Xavi and I'm <br /> a <span>Junior Frontend Developer</span>.
      </Trans>
    </h1>
    <p class="subheadline">
      {t('subHeadline')}
    </p>
    <div class="links">
      <LinkButton href="#contact" label={t('contactMeButton')} />
      <LinkButton
        href="#work"
        label={t('checkMyWorkButton')}
        theme="secondary"
      />
    </div>
  </div>
  <div id="dot" class="dot" style="top: 5%; left: 25%"></div>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    text-align: center;
    max-width: 70rem;
    margin-inline: auto;
    min-height: 95vh;

    display: relative;
  }

  img {
    max-width: 23rem;
    width: 60%;
  }

  .text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 40rem;
  }

  h1 {
    font-size: 1.6rem;
    font-size: clamp(
      1.6rem,
      1.1699346405228759rem + 1.8300653594771243vw,
      3rem
    );
    font-weight: 800;
  }

  p {
    font-size: 0.875rem;
    font-size: clamp(
      0.875rem,
      0.8366013071895425rem + 0.16339869281045752vw,
      1rem
    );
    line-height: 1.15rem;
    color: var(--color-accent);
  }

  .links {
    margin-block-start: 0.5rem;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: 1rem;
  }

  .dot {
    display: none;
  }

  @media (min-width: 760px) {
    section {
      flex-direction: row;
      text-align: start;
      gap: 1rem;
    }

    img {
      width: 40%;
    }

    .text {
      width: fit-content;
    }

    h1 {
      width: fit-content;
    }

    p {
      max-width: 90%;
      line-height: 1.25rem;
    }

    .links {
      max-width: 350px;
    }

    .dot {
      display: block;
      position: absolute;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      /* background-color: blue; */
      background-color: var(--color-accent);
      filter: blur(50px);
      transition: all cubic-bezier(0.02, 0.96, 0.87, 0.12);
      z-index: -1;
    }
  }

  @media (min-width: 992px) {
    section {
      gap: 3rem;
    }
  }
</style>
